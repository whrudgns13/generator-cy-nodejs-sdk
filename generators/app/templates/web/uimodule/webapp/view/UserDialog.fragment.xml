<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
>
<Dialog title="Create User">
    <content>
        <f:SimpleForm>
            <f:content>
                <Label text="First Name" labelFor="FirstName" required="true"/>
                <Input id="FirstName" value="{user>/user/name/familyName}" />
                <Label text="Last Name" labelFor="userName" required="true"/>
                <Input id="LastName" value="{user>/user/name/givenName}" />
                <Label text="Email" labelFor="email" required="true"/>
                <Input id="email" value="{user>/user/emails/0/value}"/>
            </f:content>
        </f:SimpleForm>
    </content>
    <beginButton>
        <Button text="Submit" type="Emphasized" press="onSubmit"/>
    </beginButton>
    <endButton>
        <Button text="Cancel" press="onClose"/>
    </endButton>
</Dialog>
</core:FragmentDefinition>